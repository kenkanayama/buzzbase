rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ユーザープロフィール
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Instagramアカウントトークン
    // セキュリティ上の理由から、フロントエンドからの直接アクセスを禁止
    // トークンはバックエンド（Cloud Functions）経由でのみ取得可能
    // Cloud FunctionsはAdmin SDKを使用するため、このルールをバイパスしてアクセス可能
    match /instagramAccounts/{accountId} {
      // フロントエンドからの読み取りを禁止（セキュリティ強化）
      // トークンはバックエンドAPI経由でのみ取得すること
      allow read: if false;
      // 書き込みも禁止（Cloud Functions経由でのみ更新可能）
      allow write: if false;
    }
    
    // SNSアカウント連携
    match /snsAccounts/{accountId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // 投稿データ
    match /posts/{postId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}

