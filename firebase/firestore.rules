rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ユーザープロフィール
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Instagramアカウントトークン
    // セキュリティ上の理由から、フロントエンドからの直接アクセスを禁止
    // トークンはバックエンド（Cloud Functions）経由でのみ取得可能
    // Cloud FunctionsはAdmin SDKを使用するため、このルールをバイパスしてアクセス可能
    match /instagramAccounts/{accountId} {
      // フロントエンドからの読み取りを禁止（セキュリティ強化）
      // トークンはバックエンドAPI経由でのみ取得すること
      allow read: if false;
      // 書き込みも禁止（Cloud Functions経由でのみ更新可能）
      allow write: if false;
    }
    
    
    // キャンペーン（商品/案件）マスター
    // 認証済みユーザーなら誰でも読み取り可能
    // 作成・削除は管理者のみ（Cloud Functions経由またはFirebase Console）
    // 更新は postedMedia と updatedAt フィールドのみ許可
    match /campaigns/{campaignId} {
      allow read: if request.auth != null;
      // postedMedia フィールドのみ更新を許可（PR投稿登録時に使用）
      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['postedMedia', 'updatedAt']);
      allow create, delete: if false; // 管理者のみ（Cloud Functions経由）
    }
    
    // PR投稿データ
    // ドキュメントID = userId
    match /prPosts/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // 削除は禁止（データ保全のため）
    }
  }
}

